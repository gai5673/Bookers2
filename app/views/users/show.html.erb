
      <%= render 'users/list' , user: @user %>

      <%= render 'books/list', book: @book %>

    <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td><%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill,100,100,:size => '40x40', format: 'jpg', fallback: 'no_image.jpg' %></td>
          <% end %>
        <td><%= link_to book_path(book) do %>
            <%= book.title %>
            <% end %>
        </td>
        <td><%= book.body %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
  </div>
</div>