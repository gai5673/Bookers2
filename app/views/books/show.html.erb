   <%= render 'users/list' , user: @user %>

    <h2 class="mt-3">New book</h2>
       <%= form_with model: @newbook do |f| %>
       <div class="form-group">
        <label for="book_tiile">Title</label>
        <%= f.text_field :title , class: "form-control book_title" %>
       </div>
       <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body , class: "form-control book_body" %>
       </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill,100,100, :size => '40x40', format: 'jpg', fallback: 'no_image.jpg' %><br>
            <%= link_to @user.name, user_path(@user)  %></td>

            <td><%= link_to @book.title, book_path(@book.id)  %></td>

            <td><%= @book.body %></td>
            <td><% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book) , class: "btn btn-sm btn-success" %>
            </td>
            <% end %>
            <td><% if @book.user == current_user  %>
              <%= link_to "Destroy", book_path(@book), method: :delete , class:"btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>